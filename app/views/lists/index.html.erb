<div class="navbar-lewagon">
  <%= image_tag "popcorn_logo.png", class: 'avatar' %>
  <%= link_to 'Add a new list', new_list_path, class: 'btn btn-primary' %>
</div>

<div class="card-large">
<div class="container">
  <div class="text-center"><h1> My movie lists: </h1> </div>
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
        <%= link_to list.name, list_path(list) %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>

      <% end %>
    </div>
    </div>


